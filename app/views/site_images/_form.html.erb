<%= simple_form_for(@site_image) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :site_page %>
    <%= f.input :file %>
    <%= f.input :title %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
