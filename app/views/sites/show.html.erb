<ol class="breadcrumb">
  <li><a href="/">首页</a></li>
  <li><a href="/sites">后台</a></li>
  <li class="active"><%= @site.title %></li>
</ol>

<div class="row">
  <div class="col-sm-12 col-md-4">
    <!-- site info -->
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">唯一二维码和固定访问地址：</h3>
      </div>
      <div class="panel-body text-center">
        <img src="http://qrickit.com/api/qr?d=<%=get_site_url(@site)%>&fgdcolor=F1678D&bgdcolor=f2f2f2&qrsize=200&t=p&e=m">
        <br/><small>扫一扫，在手机上查看</small>
      </div>
    </div>
  </div>
  <div class="col-sm-12 col-md-4">
    <!-- site info -->
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">编辑短信发送到手机</h3>
      </div>
      <div class="panel-body">
        <%= form_tag("/sites/send_sms", id: 'send_sms_form', method: "post", remote: true) do %>
          <%= text_field_tag :mobile_phone, nil, placeholder: '请输入你的手机号' %>
          <%= text_area_tag :content, "#{@site.title}\n点击下面查看：#{get_site_url(@site)}" %>
          <%= submit_tag "发送", id: "send_sms_submbit", class: "button", data: {disable_with: "发送中..."} %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-sm-12 col-md-4">
    <!-- site info -->
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">分享喜帖：</h3>
      </div>
      <div class="panel-body">
        <p>
          <a href="<%= get_site_url(@site) %>" target="_blank"><%= get_site_url(@site) %></a>
        </p>
        <%= render 'layouts/baidu_share' %>
      </div>
    </div>
  </div>
</div>


