<ol class="breadcrumb">
  <li><a href="/">首页</a></li>
  <li><a href="/sites">后台</a></li>
  <li class="active">我的应用</li>
</ol>

<header class="section-header text-center">
  <h1 class="scrollimation scale-in"><%= @site.title %></h1>
  <p><%= @site.description %></p>
</header>

<div class="row">
  <div class="col-sm-12 col-md-4">
    <!-- site info -->
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">管理应用</h3>
      </div>
      <div class="panel-body">
        <%= link_to '修改', edit_site_path(@site), class: 'btn btn-default' %>
        <%= link_to '预览', site_preview_path(@site), class: 'btn btn-default' %>
        <%= link_to_if @site.template.themes.any?, '主题', site_themes_path(@site), class: 'btn btn-default' %>
      </div>
    </div>
  </div>
  <div class="col-sm-12 col-md-4">
    <!-- site info -->
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">应用状态</h3>
      </div>
      <div class="panel-body">
        <%= link_to '进入支付页面', site_payment_path(@site), class: 'btn btn-active' %>
      </div>
    </div>
  </div>
  <div class="col-sm-12 col-md-4">
    <!-- site info -->
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">唯一二维码和固定访问地址：</h3>
      </div>
      <div class="panel-body text-center">
        <img src="http://qrickit.com/api/qr?d=<%=get_site_url(@site)%>&fgdcolor=F1678D&bgdcolor=f2f2f2&qrsize=200&t=p&e=m">
        <p>
          <a href="<%= get_site_url(@site) %>" target="_blank"><%= get_site_url(@site) %></a>
        </p>
      </div>
    </div>
  </div>
  <div class="col-sm-12 col-md-4">
    <!-- site info -->
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">编辑短信发送到手机</h3>
      </div>
      <div class="panel-body">
        <%= form_tag("/sites/send_sms", id: 'send_sms_form', method: "post", remote: true) do %>
          <%= text_field_tag :mobile_phone, nil, placeholder: '请输入你的手机号' %>
          <%= text_area_tag :content, "#{@site.title}\n点击下面查看：#{get_site_url(@site)}" %>
          <%= submit_tag "发送", id: "send_sms_submbit", class: "button", data: {disable_with: "发送中..."} %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-sm-12 col-md-4">
    <!-- site info -->
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">分享喜帖：</h3>
      </div>
      <div class="panel-body">
        <%= render 'layouts/baidu_share' %>
      </div>
    </div>
  </div>
</div>


