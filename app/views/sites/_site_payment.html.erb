<%# PAYMENT_STATUS = ['FREE', 'PENDING', 'FAILURE', 'SUCCESS', 'EXPIRED'] %>
<% case site.site_payment.status %>
<% when 'FREE' %>
  <span class="label label-success">免费</span>
<% when 'PENDING' %>
  <span class="label label-warning">等待付款</span>
  <%= link_to '点击这里进入支付页面', site_payment_path(site), class: 'btn btn-active' %>
<% when 'FAILURE' %>
  <span class="label label-warning">支付失败</span>
  <%= link_to '点击这里重新支付', site_payment_path(site), class: 'btn btn-active' %>
<% when 'SUCCESS' %>
  <span class="label label-success">付款成功</span>
  <p>亲，你已成功付款了！ <br/> 付款时间为：<%= get_date(site.site_payment.pay_at) %></p>
<% when 'EXPIRED' %>
  <span class="label label-danger">支付失败</span>
  <%= link_to '点击这里续费', site_payment_path(site), class: 'btn btn-active' %>
<% else %>
  未知
<% end %>