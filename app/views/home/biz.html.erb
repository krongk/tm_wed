<section id="biz">
  
  <div class="container">
    <div class="row">
      <% @sites.each do |site| %>
        <div class="col-sm-6 col-md-3">
          <div class="thumbnail">
            <a href="<%= site.url %>" target="_blank">
              <%= image_tag site.thumb, class: "img-responsive project-image",  alt: site.title %>
            </a>
            <div class="caption text-center" id="caption_<%= site.id %>">
              <p>
                <a href="<%= site.url %>" id="<%= site.id %>" target="_blank" title="查看二维码" onmouseover="javascript: show_qr(<%= site.id %>);"><%= site.title.to_s.truncate(12) %></a><br/>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="text-right">
    <%= will_paginate @sites %>
  </div>
</section>

<!-- meituModal start-->
<div id="qrModal" class="modal <%= ie_browser? ? '' : 'fade' %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <div class="container">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h1 id="hdr-title" class="text-center">扫描二维码</h1>
        </div>
      </div>
      <div class="modal-body text-center" id="qrBody">
        
      </div><!-- End modal-body -->
    </div><!-- End modal-content -->
  </div><!-- End modal-dialog -->
</div>
<!-- meituModal end-->

<script language="javascript">
  function show_qr(site_id){
    var url = $('#' + site_id).attr('href');
    $('#qrModal').modal('toggle');
    $("#qrBody").html("<img src='http://qrickit.com/api/qr?d=" + url + "&fgdcolor=F1678D&bgdcolor=f2f2f2&qrsize=200&t=p&e=m' />");
  }
</script>