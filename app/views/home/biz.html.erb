<section id="biz">

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <% if mobile_device? %>
          <p><a href="tel:18080810818" class="btn btn-success btn-lg btn-block">立即咨询：180-8081-0818</a></p>
        <% else %>
          <p><a href="#footer" class="btn btn-default btn-lg btn-block">高级模板定制，私人专享，价格2000起订， 详情请联系客服，咨询热线：180-8081-0818</a></p>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% @sites.each do |site| %>
        <div class="col-sm-6 col-md-3">
          <div class="thumbnail biz-thumbnail">
            <a href="<%= site.url %>" target="_blank">
              <%= image_tag site.thumb, class: "img-responsive project-image",  alt: site.title %>
            </a>
            <div class="caption text-center" id="caption_<%= site.id %>">
              <a href="<%= site.url %>"><%= site.title.to_s.truncate(12) %></a><br/>
              <a href="<%= site.url %>" id="<%= site.id %>" target="_blank" title="查看二维码" data-title="<%= site.title %>" onmouseover="javascript: show_qr(<%= site.id %>);" style="font-size: 24px; color: #94daf0;"> <i class="fa fa-qrcode"> </i> </a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="text-right">
    <%= will_paginate @sites %>
  </div>
</section>

<!-- qrModal start-->
<div id="qrModal" class="modal <%= ie_browser? ? '' : 'fade' %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <div class="container">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h1 id="hdr-title" class="text-center">扫描二维码</h1>
        </div>
      </div>
      <div class="modal-body text-center" id="qrBody">
        
      </div><!-- End modal-body -->
    </div><!-- End modal-content -->
  </div><!-- End modal-dialog -->
</div>
<!-- qrModal end-->
<script language="javascript">
  function show_qr(site_id){
    var site = $('#' + site_id);
    $('#qrModal').modal('toggle');
    $("#qrBody").html("<img src='http://qr.liantu.com/api.php?text=" + site.attr('href') + "&w=200' /><br/>"  + site.data('title') + "" );
  }
</script>