<section id="biz">
  
  <div class="container">
    <div class="row">
      <% @sites.each do |site| %>
        <div class="col-sm-6 col-md-3">
          <div class="thumbnail">
            <a href="<%= site.url %>" target="_blank">
              <%= image_tag site.thumb, class: "img-responsive project-image",  alt: site.title %>
            </a>
            <div class="caption text-center" id="caption_<%= site.id %>">
              <p>
                <a href="<%= site.url %>" target="_blank" onmouseover="javascript: show_qr();"><%= site.title.to_s.truncate(12) %></a><br/>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="text-right">
    <%= will_paginate @sites %>
  </div>
</section>

