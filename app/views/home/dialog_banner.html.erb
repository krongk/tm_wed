  // Load in a track on click
  $('ol li').click(function(e) {
    e.preventDefault();
    $(this).addClass('playing').siblings().removeClass('playing');
    var img = $('img', this).attr('src')
    //assign src to form input
    $('#site_page_banner').val(img);
    //update notice
    $('#current-select').html("你选择是："+ img);
  });
</script>