<div class="banner btn-group" data-toggle="buttons-radio">
  <% get_banners.each do |img| %>
    <button class="banner btn btn-info" type="button" name="rating" value="<%= img %>">
      <img src="<%= img %>" width="200px">
    </button>
  <% end %>
</div>

<script language="javascript">
  $('.banner').on('click', function() {
      var img = $('button[name="rating"].active').val();
      $('#site_page_banner').val(img);
      $("#myModal").modal("hide");
      $("#myModal").removeData('bs.modal');
  });
</script>