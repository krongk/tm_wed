<!-- ==============================================
Blog
=============================================== -->
<section id="blog" class="white-bg padding-top-bottom">
  <div class="container">    
    <div class="row blog">
      <% @posts.each do |post| %>   
        <div class="col-md-4 col-sm-6 item scrollimation fade-up">
          <div class="icon">
            <%= link_to "/post/#{post.short_title}" do %>
              <img class="img-responsive img-center" src="<%= post.image_path %>" alt="<%= post.title %>" />
            <% end %>
          </div>        
          <h2><%= link_to post.title, "/post/#{post.short_title}" %></h2>
          <p class="hidden-xs"><%= get_short_content(post.description, 100)%></p>      
        </div>
      <% end %>    
    </div>  
  </div>
</section>

